{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "target": "es5",        
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "sourceMap": true,
        "typeRoots": [
          "node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2016",
            "scripthost",
            "es2015.iterable"
        ],
        "types": [
            "jquery"
        ]
    }
}